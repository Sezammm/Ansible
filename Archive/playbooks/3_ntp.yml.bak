- name: Setup Chrony NTP server and clients
  hosts: ntp
  become: true
  vars:
    allow_net: "192.168.3.0/24"
    upstreams:
      - "0.pool.ntp.org"
      - "1.pool.ntp.org"
  tasks:
    - name: Install chrony
      ansible.builtin.yum:
        name: chrony
        state: present

    - name: Configure chrony.conf for server
      ansible.builtin.template:
        src: ../templates/chrony.server.conf.j2
        dest: /etc/chrony.conf
        owner: root
        group: root
        mode: '0644'
      notify: restart chronyd

    - name: Enable and start chronyd
      ansible.builtin.service:
        name: chronyd
        state: started
        enabled: true

    - name: Open NTP port in firewall
      ansible.builtin.firewalld:
        port: 123/udp
        permanent: true
        immediate: true
        state: enabled

  handlers:
    - name: restart chronyd
      ansible.builtin.service:
        name: chronyd
        state: restarted

- name: Configure chrony on all hosts (clients)
  hosts: clients
  become: true
  vars:
    ntp_server_fqdn: "prdx-ntp101.ziyotek.local"
  tasks:
    - name: Install chrony on client
      ansible.builtin.yum:
        name: chrony
        state: present



    - name: Deploy client chrony.conf
      ansible.builtin.template:
        src: ../templates/chrony.client.conf.j2
        dest: /etc/chrony.conf
        owner: root
        group: root
        mode: '0644'
      notify: restart chronyd
      


    - name: Allow chrony to use DNS (restart)
      ansible.builtin.service:
        name: chronyd
        state: restarted
        enabled: true
